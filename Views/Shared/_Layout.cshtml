 <style>
    /* Chatbox Styles */
    
    #chatbox-button {
        position: fixed;
        bottom: 25px;
        right: 25px;
        background: linear-gradient(135deg, #00c853, #4caf50);
        color: white;
        padding: 12px 20px;
        border-radius: 50px;
        cursor: pointer;
        z-index: 1001;
        transition: all 0.3s ease;
        font-size: 18px;
        display: flex;
        align-items: center;
        gap: 8px;
        box-shadow: 0 6px 15px rgba(0, 200, 83, 0.3);
    }
    #chatbox-button:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(0, 200, 83, 0.4);
        background: linear-gradient(135deg, #00a843, #388e3c);
    }

    #chatbox-container {
        position: fixed;
        bottom: 90px;
        right: 25px;
        width: 380px;
        height: 480px;
        background: #f0f2f5;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        display: none;
        z-index: 1000;
        border-radius: 15px;
        overflow: hidden;
        border: 1px solid rgba(0, 0, 0, 0.05);
    }

    #chatbox-header {
        background: linear-gradient(90deg, #00c853, #4caf50);
        color: #fff;
        padding: 15px;
        text-align: center;
        font-weight: 600;
        cursor: pointer;
        font-size: 16px;
        letter-spacing: 0.5px;
        position: relative;
    }
    #chatbox-header::after {
        content: "▼";
        position: absolute;
        right: 15px;
        font-size: 12px;
        transition: transform 0.3s ease;
    }
    #chatbox-container[style*="display: none"] #chatbox-header::after {
        transform: rotate(180deg);
    }

    #chatbox-content {
        padding: 20px;
        height: 360px;
        overflow-y: auto;
        background: #f0f2f5;
        scrollbar-width: thin;
        scrollbar-color: #00c853 #f0f2f5;
    }
    #chatbox-content::-webkit-scrollbar {
        width: 6px;
    }
    #chatbox-content::-webkit-scrollbar-thumb {
        background: #00c853;
        border-radius: 10px;
    }
    #chatbox-content::-webkit-scrollbar-track {
        background: #f0f2f5;
    }

    #chatbox-input {
        display: flex;
        padding: 10px 15px;
        border-top: 1px solid #e0e4e8;
        background: #fff;
        gap: 10px;
        align-items: center;
    }

    #chatbox-input input {
        flex: 1;
        padding: 10px 15px;
        border: 1px solid #e0e4e8;
        border-radius: 25px;
        outline: none;
        font-size: 14px;
        transition: border-color 0.3s ease;
    }
    #chatbox-input input:focus {
        border-color: #00c853;
        box-shadow: 0 0 5px rgba(0, 200, 83, 0.2);
    }

    #chatbox-input button#sendButton {
        background: #00c853;
        color: white;
        border: none;
        border-radius: 50%;
        cursor: pointer;
        padding: 10px;
        font-size: 14px;
        transition: all 0.3s ease;
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    #chatbox-input button#sendButton:hover {
        background: #00a843;
    }

    /* Chat messages */
    #chatlog .message-container {
        display: flex;
        align-items: flex-start;
        margin-bottom: 15px;
        gap: 10px;
    }

    #chatlog .message-container.user {
        flex-direction: row-reverse;
    }

    #chatlog .avatar {
        width: 35px;
        height: 35px;
        border-radius: 50%;
        background: #ddd;
    }

    #chatlog .message-content {
        max-width: 70%;
        position: relative;
    }

    #chatlog p {
        margin: 0;
        padding: 10px 15px;
        border-radius: 15px;
        font-size: 14px;
        line-height: 1.4;
        word-wrap: break-word;
        position: relative;
        animation: fadeIn 0.3s ease;
    }

    #chatlog p.user-message {
        background: #00c853;
        color: white;
        border-radius: 15px 15px 0 15px;
    }

    #chatlog p.bot-message {
        background: #fff;
        color: #333;
        border: 1px solid #e0e4e8;
        border-radius: 15px 15px 15px 0;
    }

    #chatlog .message-time {
        font-size: 12px;
        color: #888;
        margin-top: 5px;
        text-align: right;
    }

    #chatlog .message-container.bot .message-time {
        text-align: left;
    }

    #chatlog .message-actions {
        display: flex;
        gap: 5px;
        margin-top: 5px;
        font-size: 12px;
    }

    #chatlog .message-actions span {
        color: #888;
        cursor: pointer;
    }

    #chatlog .message-actions span:hover {
        color: #00c853;
    }

