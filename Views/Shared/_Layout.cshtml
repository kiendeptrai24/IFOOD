   $(document).ready(function () {
    function limitChatlog(maxMessages = 20) {
        const messages = $("#chatlog p, #chatlog img");
        if (messages.length > maxMessages) {
            messages.slice(0, messages.length - maxMessages).remove();
        }
    }

    $("#sendButton").click(function () {
        const userMessage = $("#userInput").val()?.trim();
        if (!userMessage) return;

        // Hiển thị tin nhắn người dùng
        $("#chatlog").append(`<p class="user-message"><strong>You:</strong> ${userMessage}</p>`);
        $("#userInput").val("");

        // Gửi AJAX đến controller ChatbotController
        $.ajax({
            url: '@Url.Action("GetResponse", "Chatbot")',
            type: 'POST',
            data: { message: userMessage },
            success: function (data) {
                let botMessage = `<p class="bot-message"><strong>Bot:</strong> ${data.response || 'Không nhận được phản hồi từ bot.'}</p>`;

                // Xử lý hình ảnh nếu có
                if (data.imageUrl) {
                    if (data.imageUrl.startsWith("data:image")) {
                        // Nếu API trả về Base64 có tiền tố sẵn, hiển thị ngay
                        botMessage += `<img src="${data.imageUrl}" alt="Product Image" style="max-width: 200px; margin-top: 5px;">`;
                    } else if (data.imageUrl.startsWith("/9j/") || data.imageUrl.length > 100) {
                        // Nếu chuỗi trông giống Base64 (JPEG Base64 bắt đầu bằng '/9j/')
                        botMessage += `<img src="data:image/jpeg;base64,${data.imageUrl}" alt="Product Image" style="max-width: 200px; margin-top: 5px;">`;
                    } else {
                        // Nếu là URL, hiển thị trực tiếp
                        botMessage += `<img src="${data.imageUrl}" alt="Product Image" style="max-width: 200px; margin-top: 5px;">`;
                    }
                }

                // Thêm phản hồi vào chatlog
                $("#chatlog").append(botMessage);
                limitChatlog(20);
                $("#chatbox-content").scrollTop($("#chatbox-content")[0].scrollHeight);
            },
            error: function (xhr, status, error) {
                const errorMessage = xhr.responseJSON?.response || 'Lỗi hệ thống, vui lòng thử lại sau.';
                $("#chatlog").append(`<p class="bot-message"><strong>Bot:</strong> ${errorMessage}</p>`);
                limitChatlog(20);
                $("#chatbox-content").scrollTop($("#chatbox-content")[0].scrollHeight);
            }
        });
    });

    // Cho phép nhấn Enter để gửi tin nhắn
    $("#userInput").keypress(function (e) {
        if (e.which === 13) { // Enter key
            $("#sendButton").click();
        }
    });
});




