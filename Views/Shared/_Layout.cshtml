     <script>
 function toggleChatbox() {
    $("#chatbox-container").toggle();
}

$(document).ready(function () {
    function appendMessage(sender, message, isBot = false) {
        const messageClass = isBot ? "bot" : "user";
        const messageBubbleClass = isBot ? "bot-message" : "user-message";
        const avatarUrl = isBot ? "https://placehold.co/35x35" : "https://placehold.co/35x35";
        const currentTime = new Date().toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' });

        const messageHtml = `
            <div class="message-container ${messageClass}">
                <img src="${avatarUrl}" class="avatar" alt="Avatar">
                <div class="message-content">
                    <p class="${messageBubbleClass}">${message}</p>
                    <div class="message-time">${currentTime}</div>
                    ${isBot ? '<div class="message-actions"><span>Được tạo bởi AI</span> • <span>😊</span></div>' : ''}
                </div>
            </div>
        `;

        $("#chatlog").append(messageHtml);
        $("#chatbox-content").scrollTop($("#chatbox-content")[0].scrollHeight);
    }

    function displayProducts(products) {
        let baseUrl = window.location.origin;
        if (products.length > 0) {
            let productList = '<div class="product-list"></div>';
            $("#chatlog").append(productList);

            products.forEach(product => {

                let productCard = `
                    <div class="product-card">
                        <img src="${product.img}" alt="${product.name}" class="product-image">
                        <div class="product-info">
                            <h4>${product.name}</h4>
                            <p>${product.description}</p>
                            <p><strong>${product.price}</strong></p>
                            <a href="${baseUrl}/Product/Detail/${product.id}" class="product-button">🔍 Xem Chi Tiết</a>
                        </div>
                    </div>
                `;
                $(".product-list").append(productCard);
            });

            $(".product-card").hide().fadeIn(500);
        } else {
            appendMessage("Bot", "Không có sản phẩm nào phù hợp.", true);
        }
    }

    function sendMessage() {
        const userMessage = $("#userInput").val().trim();
        if (!userMessage) return;

        appendMessage("Bạn", userMessage);
        $("#userInput").val("");
        $("#sendButton").prop("disabled", true);

        $.post('@Url.Action("GetResponse", "Chatbot")', { message: userMessage }, function (data) {
            appendMessage("Bot", data.response || "Đây là danh sách sản phẩm tôi tìm thấy:", true);
            if (data.products) displayProducts(data.products);
        }).fail(function () {
            appendMessage("Bot", "Lỗi hệ thống, vui lòng thử lại sau.", true);
        }).always(function () {
            $("#sendButton").prop("disabled", false);
        });
    }

    $("#sendButton").click(sendMessage);
    $("#userInput").keypress(function (e) {
        if (e.which === 13) sendMessage();
    });
});

