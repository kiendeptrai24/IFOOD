@using iFood.Data
@using iFood.Data.Enum
@model Order

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
<head>
    <style>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        body {
            color: #000;
            overflow-x: hidden;
            background-color: #8C9EFF;
            text-align: center;
            font-family: Arial, sans-serif;
            padding: 20px;
        }

        .card {
            background-color: #ECEFF1;
            padding: 20px;
            border-radius: 10px;
            max-width: 800px;
            margin: 0 auto;
        }

        /* Thanh trạng thái */
        #progressbar {
            display: flex;
            justify-content: space-between;
            padding: 0;
            list-style: none;
            margin: 30px 0;
            position: relative;
        }

        #progressbar li {
            width: 25%;
            position: relative;
            font-size: 14px;
            color: #455A64;
            text-align: center;
        }

        #progressbar li:before {
            content: "";
            width: 40px;
            height: 40px;
            line-height: 40px;
            background: #C5CAE9;
            border-radius: 50%;
            margin: auto;
            display: block;
        }

        #progressbar li i {
            font-size: 20px;
            color: #fff;
            position: absolute;
            top: 10px;
            left: 50%;
            transform: translateX(-50%);
        }

        #progressbar li:after {
            content: '';
            width: 100%;
            height: 5px;
            background: #C5CAE9;
            position: absolute;
            left: 0;
            top: 18px;
            z-index: -1;
        }

        #progressbar li:first-child:after {
            border-top-left-radius: 10px;
            border-bottom-left-radius: 10px;
            left: 50%;
        }

        #progressbar li:last-child:after {
            border-top-right-radius: 10px;
            border-bottom-right-radius: 10px;
            width: 50%;
        }

        /* Trạng thái */
        #progressbar li.completed:before, #progressbar li.completed:after {
            background: #00C853;
        }

        #progressbar li.active:before, #progressbar li.active:after {
            background: #651FFF;
        }

        /* Bố cục icon */
        .icon-container {
            display: flex;
            justify-content: space-between;
            background-color: #8C9EFF;
            padding: 15px;
            border-radius: 10px;
            margin-top: 20px;
        }

        .icon-box {
            background-color: white;
            border-radius: 10px;
            padding: 15px;
            text-align: center;
            flex: 1;
            margin: 5px;
        }

        .icon {
            width: 50px;
            height: 50px;
        }

        .font-weight-bold {
            font-weight: bold;
        }
    </style>
</head>
<body>
        <div class="card mt-3" >
        <h5>ĐƠN HÀNG <span class="text-primary font-weight-bold">@Model.TransactionId</span></h5>
        <p>Vận chuyển bởi: <strong>USPS - 234094567242423422898</strong></p>

        <!-- Thanh trạng thái đơn hàng -->
        <ul id="progressbar">
            <li class="@(Model.status == Status.PendingConfirmation ? "active" : (Model.status > Status.PendingConfirmation ? "completed" : ""))">
                <i class="fas fa-box"></i><br>Pending Confirmation
            </li>
            <li class="@(Model.status == Status.Shipping ? "active" : (Model.status > Status.Shipping ? "completed" : ""))">
                <i class="fas fa-shipping-fast"></i><br> Shipping
            </li>
            <li class="@(Model.status == Status.Delivered ? "active" : (Model.status > Status.Delivered ? "completed" : ""))">
                <i class="fas fa-truck"></i><br>Delivered
            </li>
            <li class="@(Model.status == Status.Completed ? "active" : (Model.status > Status.Completed ? "completed" : ""))">
                <i class="fas fa-check-circle"></i><br>Completed
            </li>
        </ul>



        <!-- Các trạng thái với icon -->
        <div class="icon-container">
            <div class="icon-box">
                <img class="icon" src="https://i.imgur.com/9nnc9Et.png">
                <p class="font-weight-bold">Đã xử lý</p>
            </div>
            <div class="icon-box">
                <img class="icon" src="https://i.imgur.com/u1AzR7w.png">
                <p class="font-weight-bold">Đã gửi</p>
            </div>
            <div class="icon-box">
                <img class="icon" src="https://i.imgur.com/TkPm63y.png">
                <p class="font-weight-bold">Đang vận chuyển</p>
            </div>
            <div class="icon-box">
                <img class="icon" src="https://i.imgur.com/HdsziHP.png">
                <p class="font-weight-bold">Đã nhận</p>
            </div>
        </div>

    </div>
</body>