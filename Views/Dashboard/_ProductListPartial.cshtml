@using iFood.ViewModels
@model IndexProductViewModel

<style>
    .tbl-rounded { overflow: hidden; border-radius: .5rem; }
    .tbl-head { background: #f8f9fa; }
    .img-thumb { width: 50px; height: 50px; object-fit: cover; border-radius: 8px; }
    .actions .btn { padding: .25rem .5rem; }
</style>
<table class="table table-bordered tbl-rounded">
    <thead class="tbl-head">
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Category</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Total</th>
            <th>Release</th>
            <th class="text-end">Actions</th>
        </tr>
    </thead>
    @foreach(var product in Model.Products)
    {
        <tbody>
            <tr>
                <td class="d-flex align-items-center gap-2">
                    <img src="@(product.Image ?? "https://placehold.co/50x50")" class="img-thumb" alt="@product.Name">
                    <span class="fw-semibold">@product.Name</span>
                </td>
                <td class="text-muted" style="max-width: 280px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">@product.Description</td>
                <td>@product.Category</td>
                <td>@product.Quantity</td>
                <td>$@product.Price</td>
                <td>$@product.Total</td>
                <td>@product.DateSell.ToString("yyyy/MM/dd")</td>
                <td class="text-end actions">
                    <a asp-controller="Product" asp-action="Detail" asp-route-id="@product.ProductID" class="btn btn-outline-success btn-sm" title="Detail">
                        <i class="bi bi-card-heading"></i>
                    </a>
                    <a asp-controller="Product" asp-action="Edit" asp-route-id="@product.ProductID" class="btn btn-outline-warning btn-sm" title="Edit">
                        <i class="bi bi-pencil-square"></i>
                    </a>
                    <a class="btn btn-outline-danger btn-sm delete-button" data-id="@product.ProductID" title="Delete">
                        <i class="bi bi-trash"></i>
                    </a>
                </td>
            </tr>
        </tbody>
    }
</table>
