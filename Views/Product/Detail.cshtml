

@model Product
<style>
        .product-card {
            height: 300px;
            width: 500px;
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: #f8f8f8;
            border-radius: 10px;
        
        }

        .product-image {
            max-width: 100%;
            height: auto;
            display: block;
        }

        .product-info {
            padding: 15px;
        }

        .product-title {
            font-size: 18px;
            font-weight: bold;
        }

        .product-price {
            color: #f77b0b;
            font-size: 16px;
            font-weight: bold;
        }

        .btn-buy {
            background-color: #ff5722;
            color: white;
            border: none;
            padding: 8px 15px;
            border-radius: 5px;
            cursor: pointer;
            width: 100%;
        }

        .btn-buy:hover {
            background-color: #e64a19;
        }
        #notification {
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background-color: rgba(0, 0, 0, 0.8);
            color: white;
            padding: 15px 25px;
            border-radius: 8px;
            font-size: 18px;
            display: none; /* Ban đầu ẩn */
            z-index: 9999;
            text-align: center;
            opacity: 0;
            transition: opacity 0.5s ease-in-out;
        }

    </style>
<div id="success-message" style="display:none; background-color: #4CAF50; color: white; padding: 10px; text-align: center; border-radius: 5px;"></div>
<div id="error-message" style="display:none; background-color: #f44336; color: white; padding: 10px; text-align: center; border-radius: 5px;"></div>

<section class="container my-5 pt-5">
    <div class="container bg-white p-4 rounded-lg shadow-lg">
        <div class="row">
            <!-- Product Image Section -->
            <div class="col-lg-6 text-center">
                <img src="@Model.Image" class="img-fluid mb-4" width="400" height="400">
                <div class="d-flex justify-content-center">
                    <img src="@Model.Image" alt="" class="img-thumbnail mr-2" width="50" height="50">
                    <img src="@Model.Image" alt="" class="img-thumbnail mr-2" width="50" height="50">
                    <img src="@Model.Image" alt="" class="img-thumbnail mr-2" width="50" height="50">
                    <img src="@Model.Image" alt="" class="img-thumbnail mr-2" width="50" height="50">
                    <img src="@Model.Image" alt="" class="img-thumbnail" width="50" height="50">
                </div>
            </div>
            <!-- Product Details Section -->
            <div class="col-lg-6">
                <h1 class="h4 font-weight-bold mb-2">@Model.Name</h1>
                <div class="d-flex align-items-center mb-2">
                    <div id="ratingStars" class="text-warning">
                        <!-- Stars will be dynamically generated here -->
                    </div>
                    <span class="ml-2 text-muted" id="ratingValue">4.5</span> <!-- Rating value -->
                    <span class="ml-2 text-muted">154 orders</span>
                    <span class="ml-2 text-success">In stock</span>
                </div>
                <p class="h5 font-weight-bold mb-4">@Model.Price <span class="text-muted">per box</span></p>
                <p class="text-muted mb-4">@Model.Description</p>
                <div class="mb-4">
                    <p class="text-muted"><span class="font-weight-bold">Category:</span> @Model.Category</p>
                    <p class="text-muted"><span class="font-weight-bold">Release:</span> @Model.DateSell.ToString("yyyy/MM/dd")</p>
                    <p class="text-muted"><span class="font-weight-bold">Quantity:</span> @Model.Quantity.ToString()</p>
                </div>

                <div class="d-flex m-4">
                    <div class="d-flex">
                        @if(@Model.Quantity <= 0)
                        {
                            <p>Sold out</p>
                        }
                        else
                        {
                            <a type="button" asp-controller="Cart" asp-action="Create" asp-route-id="@Model.ProductID">
                                <button class="btn btn-light flex-fill mr-2"><i class="bi bi-bag-plus fs-5"></i>
                                    Add Cart</button>
                            </a>
                            <button class="btn btn-primary flex-fill" onclick="BuyItems(this)" data-id="@Model.ProductID">
                                <i class="bi bi-piggy-bank fs-5"></i> Buy</button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    function generateStars(rating) {
        let fullStar = '<i class="bi bi-star-fill"></i>';
        let halfStar = '<i class="bi bi-star-half"></i>';
        let emptyStar = '<i class="bi bi-star"></i>';

        let starsHTML = '';
        let roundedRating = Math.floor(rating);
        let hasHalfStar = rating % 1 >= 0.5;

        // Add full stars
        for (let i = 0; i < roundedRating; i++) {
            starsHTML += fullStar;
        }
        // Add half star if necessary
        if (hasHalfStar) {
            starsHTML += halfStar;
        }
        // Add empty stars to complete the 5 stars
        while (starsHTML.split('i').length - 1 < 10) { // Each `<i>` tag has 2 "i" characters
            starsHTML += emptyStar;
        }

        document.getElementById("ratingStars").innerHTML = starsHTML;
        document.getElementById("ratingValue").innerText = rating; // Display rating value
    }

    // Example of calling the function with the rating from the model
    generateStars(4.5); // You can replace this with @Model.Rating if it's dynamic
</script>


<script>
    function BuyItems(button) {
        let productId = button.getAttribute("data-id"); // Get product ID

        Swal.fire({
            title: "Choose payment method",
            text: "Please select the payment method you would like to use.",
            icon: "question",
            showCancelButton: true,
            confirmButtonText: "COD",
            cancelButtonText: "MoMo",
            showDenyButton: true,
            denyButtonText: "ZaloPay",
            html: `
                <button id="other-payment" class="swal2-confirm swal2-styled" style="margin-top: 10px;">
                    Other E-wallets
                </button>
            `,
            didOpen: () => {
                document.getElementById("other-payment").addEventListener("click", function () {
                    processOrder(productId, "Other");
                    Swal.close(); // Close the dialog after selection
                });
            }
        }).then((result) => {
            if (result.isConfirmed) {
                processOrder(productId, 2); // COD
            } else if (result.dismiss === Swal.DismissReason.cancel) {
                processOrder(productId, 0); // MoMo
            } else if (result.isDenied) {
                processOrder(productId, 1); // ZaloPay
            }
        });
    }

    function processOrder(productId, paymentMethod) {
        console.log("Placing order with ProductID:", productId, "Payment method:", paymentMethod);

        // Send request to server to process the order
        fetch('/Order/CreateOrder', {
            method: "POST",
            headers: {
                "Content-Type": "application/json"
            },
            body: JSON.stringify({ productId, paymentMethod })
        })
        .then(response => response.json())
        .then(data => {
            if (data.payUrl) {
                window.location.href = data.payUrl;  // Redirect on frontend
            }
        });
    }


</script>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
