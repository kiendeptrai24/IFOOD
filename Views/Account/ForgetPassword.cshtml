@using iFood.ViewModels
@model ForgetPasswordViewModel
@{
    ViewData["Title"] = "Forgot password";
}

<head>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
</head>

<style>
    body{
        background: rgba(147, 33, 33, 1);
    }
    .form-container {
        max-width: 500px;
        background: rgba(255, 255, 255, 0.3);
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
        margin: auto;
        margin-top: 50px;
        text-align: center;
    }
    
    .divider {
        height: 3px;
        width: 50px;
        background-color: #007bff;
        margin: auto;
        margin-bottom: 20px;
    }
    
    .position-relative {
        position: relative;
    }
    
    .field-icon {
        position: absolute;
        top: 50%;
        right: 10px;
        transform: translateY(-50%);
        cursor: pointer;
        font-size: 18px;
    }
    
    .form-control {
        padding-right: 40px;
        border-radius: 8px;
    }
    
    .form-control:focus {
        border-color: #007bff;
        box-shadow: 0px 0px 5px rgba(0, 123, 255, 0.5);
    }
    
    .btn-xl {
        padding: 12px 20px;
        font-size: 18px;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

</style>
<section>

    <div class="form-container">
        <h2>Forgot your password?</h2>
        <div class="divider"></div>

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">
                <span><b>Sorry!</b> - @TempData["Error"]</span>
            </div>
        }

        <form asp-action="ForgetPassword">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-floating mb-3">
                <input asp-for="EmailAddress" class="form-control" type="email"/>
                <label asp-for="EmailAddress">Email address</label>
                <span asp-validation-for="EmailAddress" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-center gap-3 mt-3">
                <input class="btn btn-primary btn-xl" type="submit" value="Send reset link">
                <a class="btn btn-secondary btn-xl" asp-controller="Home" asp-action="Index">Cancel</a>
            </div>
        </form>
    </div>
</section>
