@using iFood.ViewModels

@model ProfileUserViewModel

<style>
    body {
        background-color: #021C2E; /* Màu xanh đậm bên ngoài */
    }

    #formContainer {
        background-color: rgba(255, 140, 0, 0.9); /* Màu cam */
        padding: 40px;
        border-radius: 20px;
        color: white;
        max-width: 800px;
    }

    .position-relative {
        position: relative;
    }

    .field-icon {
        position: absolute;
        top: 50%;
        right: 10px;
        transform: translateY(-50%);
        cursor: pointer;
        font-size: 18px;
    }

    .form-control {
        padding-right: 40px;
        background: rgba(255, 255, 255, 0.2);
        color: white;
        border: none;
    }

    .button-container {
        display: flex;
        gap: 10px;
    }

    .btn-custom {
        background: #FF5722;
        color: white;
        padding: 12px 25px;
        border-radius: 8px;
        transition: 0.3s;
        font-size: 16px;
    }

    .btn-custom:hover {
        background: #E64A19;
    }

    .avatar-preview {
        width: 180px;
        height: 180px;
        border-radius: 50%;
        object-fit: cover;
        cursor: pointer;
        transition: transform 0.3s;
    }

    .avatar-preview:hover {
        transform: scale(1.1);
    }
</style>

<section>
     @if(TempData["Error"] != null)
    {
        <div class="col-md-12 alert alert-danger">
            <span><b>Sorry!</b> - @TempData["Error"]</span>
        </div>
    }
   <div class="container d-flex align-items-center justify-content-center min-vh-100">
        <div id="formContainer">
            <h2 class="text-center">Account Settings</h2>
            <form id="avatar-form" action="ChangeAvatar" method="post" enctype="multipart/form-data">
                <div class="text-center mb-4">
                    <input type="file" asp-for="Avatar" class="d-none" id="avatar-input" accept="image/*">
                    <img src="@(Model.AvatarUrl ?? "https://placehold.co/180")"
                        class="avatar-preview"
                        alt="User Avatar"
                        onclick="document.getElementById('avatar-input').click();">

                    <button type="submit" class="btn btn-custom mt-3">UPLOAD NEW PHOTO</button>
                </div>
            </form>
            <form asp-action="Profile" method="post">
                <div class="form-floating mb-3">
                    <input asp-for="Name" class="form-control" type="text" placeholder="Username"/>
                    <label asp-for="Name">Username</label>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Email" class="form-control" type="email" readonly>
                    <label asp-for="Email">Email address</label>
                </div>
                <div class="form-floating mb-3 position-relative">
                    <input asp-for="Password" id="password-field" class="form-control" type="password" placeholder="Password"/>
                    <label asp-for="Password">Password</label>
                    <i class="fa fa-eye field-icon toggle-password" data-toggle="password-field"></i>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Phone" class="form-control" type="phone" placeholder="Phone Number"/>
                    <label asp-for="Phone">Phone</label>
                </div>
                <div class="d-flex justify-content-between">
                    <button class="btn btn-custom" type="submit">UPDATE PROFILE</button>
                    <button class="btn btn-danger">DELETE ACCOUNT</button>
                </div>
            </form>
        </div>
    </div>
</section>

<script>
    document.querySelectorAll('.toggle-password').forEach(item => {
        item.addEventListener('click', function () {
            var passwordField = document.getElementById(this.getAttribute('data-toggle'));
            if (passwordField) {
                passwordField.type = passwordField.type === 'password' ? 'text' : 'password';
                this.classList.toggle('fa-eye');
                this.classList.toggle('fa-eye-slash');
            }
        });
    });
    document.getElementById('avatar-input').addEventListener('change', function(event) {
        var reader = new FileReader();
        reader.onload = function(e) {
            document.querySelector('.avatar-preview').src = e.target.result;
        }
        reader.readAsDataURL(event.target.files[0]);
    });
    
</script>
<script>
    document.getElementById('avatar-input').addEventListener('change', function(event) {
        var reader = new FileReader();
        reader.onload = function(e) {
            document.querySelector('.avatar-preview').src = e.target.result;
            document.getElementById('avatar-form').setAttribute('data-changed', 'true'); // Đánh dấu đã thay đổi ảnh
        };
        reader.readAsDataURL(event.target.files[0]);
    });

    document.getElementById('avatar-form').addEventListener('submit', function(event) {
        if (this.getAttribute('data-changed') !== 'true') {
            event.preventDefault(); // Ngăn submit nếu ảnh chưa thay đổi
        }
    });
</script>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
